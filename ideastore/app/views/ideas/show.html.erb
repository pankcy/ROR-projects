<main class="ideas">
  <section class="text-center">
    <div class="container">
      <h1>Idea</h1>
      <div class="idea">
        <div class="title">
          <strong>Title: </strong> <%= @idea.title %>
        </div>
        <div class="description">
          <strong>Description: </strong>
          <p>
            <%= @idea.description %>
          <p>
        </div>
      </div>

      <p>
        <%= link_to  "Back to all ideas", ideas_path, class: 'btn btn-primary' %>
      </p>
    </div>
  </section>
</main>


